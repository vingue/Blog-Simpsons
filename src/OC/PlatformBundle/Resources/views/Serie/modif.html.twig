
{# src/OC/PlatformBundle/Resources/views/Default/acceuil.html.twig #}

<TITLE>Paritek</TITLE>

<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
         
<link rel="stylesheet" type="text/css" href="/symfony/web/css/bootstrap.css">
<link rel="stylesheet" type="text/css" href="/symfony/web/css/acceuil.css">
</head>
	<body>
		
		<div>
			<div id="arriere">
				<img class='scroll' src="/symfony/web/images/back2.jpg" alt="" style="position: absolute;" />
			</div>
			<img class='png' id="titre" src="/symfony/web/images/simp.png" alt="" style="position: relative; top: 5px; left: 0;"> 
   
		</div>
	
		<div id="cont-form" style="position:relative">
		<form method="post" action="{{ path("serie_modif")}}" enctype="multipart/form-data"> 
			<div class="form-group">
				<label>Contenu</label>
					<textarea type="text" name="contenu" class="form-control" id="contenu">{{contenu}}</textarea>
			</div>
			
			<input type="hidden" name="MAX_FILE_SIZE" value="5000000">
			<label>Choisissez votre première image?</label> <br/><input type="file" name="fichier1" id="fichier1" value={{lien1}}/>
			<br/>
			
			<label>Choisissez votre deuxième image?</label> <br/><input type="file" name="fichier2" id="fichier2" value={{lien2}}/>
			<br/>
			
			<label>Choisissez votre troisième image?</label> <br/><input type="file" name="fichier3" id="fichier3" value={{lien3}}/>
			<br/>
			
		
			<div class="checkbox">
				<label>
					<input type="checkbox"> Check me out
				</label>
			</div>
			
			<input type="submit" value="Modifier" />
		</form>
		</div>
		
		
	</body>
</html>
